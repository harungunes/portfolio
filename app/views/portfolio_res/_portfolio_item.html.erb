<div class="cardy">
  <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), class: 'card-img-top' %>
  <div class="card-body">
    <h5 class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></h5>
    <div class="mt-3">
      <% if logged_in?(:site_admin) %>
        <div class="btn-group">
          <button class='btn btn-sm btn-outline-secondary'><%= link_to "Edit", edit_portfolio_re_path(portfolio_item.id) %></button>
          <button class='btn btn-sm btn-outline-secondary'><%= link_to "Delete", portfolio_re_path(portfolio_item), method: :delete, data: {confirm: "Are you sure?"} %></button>
        </div>
      <% end %>
      <small class="text-muted float-right"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %> ago</small>
    </div>
  </div>
</div>
