<%= form_for(portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary">
            Upload a thumb image <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area:body, class: 'form-control', rows: 5 %>
      </div>
    </div>
  </div>

  <ul class="">
    <%= form.fields_for :technologies do |technology_form|%>
    <li style="list-style: none;" class="form-group">
      <%= technology_form.label :name %><br />
      <%= technology_form.text_field :name, class: 'form-control' %>
    </li>
    <% end %>
  </ul>
  <div class="form-group">
    <%= form.submit 'Save',class: 'btn btn-success' %>
  </div>
<% end %>
